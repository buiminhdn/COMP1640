@{
    Layout = "_Layout"; // Use a generic layout; adjust to _LayoutStudent, _LayoutTeacher, etc., if role-specific
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="card border-0 shadow-sm rounded-3" style="width: 100%; margin: 0 auto;">
        <div class="card-header py-4 px-4 text-center" style="background-color: #e74c3c; color: #ffffff; border-radius: 12px 12px 0 0;">
            <h2 class="fw-semibold mb-0"><i class="fas fa-exclamation-circle me-2"></i> Access Denied</h2>
        </div>
        <div class="card-body p-4 text-center">
            <p class="text-muted fs-5 mb-4">Sorry, you don’t have permission to access this page or resource.</p>
            <p class="text-muted mb-4">If you believe this is an error, please contact your administrator or teacher for assistance.</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="javascript:history.back()" class="btn btn-outline-primary px-4 py-2" style="border-radius: 8px;">
                    <i class="fas fa-arrow-left me-1"></i> Go Back
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary px-4 py-2" style="border-radius: 8px;">
                    <i class="fas fa-home me-1"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background-color: #ffffff;
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1); /* Enhanced hover shadow */
        }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

    .btn-outline-primary {
        border-color: #3498db;
        color: #3498db;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background-color: #3498db;
            color: #ffffff;
        }
</style>