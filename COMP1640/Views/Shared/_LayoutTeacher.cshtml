@{
    Layout = "_Layout";
}

<!-- Teacher Navbar -->
<nav class="teacher-navbar">
    <div class="container">
        <ul class="nav justify-content-start">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Teacher" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                   asp-controller="Teacher" asp-action="Index">
                    <i class="fas fa-home"></i> Index
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Teacher" && ViewContext.RouteData.Values["Action"]?.ToString() == "Document" ? "active" : "")"
                   asp-controller="Teacher" asp-action="Document">
                    <i class="fas fa-file-alt"></i> Document
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Teacher" && ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")"
                   asp-controller="Teacher" asp-action="Dashboard">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
        </ul>
    </div>
</nav>

<!-- Main Content -->
<div class="content">
    @RenderBody()
</div>

<style>
    .teacher-navbar {
        background-color: #f8f9fa; /* Light background consistent with other navbars */
        border-bottom: 1px solid #e0e0e0;
        padding: 0.5rem 0; /* Compact padding */
    }

        .teacher-navbar .nav-link {
            color: #34495e;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

            .teacher-navbar .nav-link:hover {
                background-color: #e9ecef;
                color: #3498db;
            }

            .teacher-navbar .nav-link.active {
                background-color: #3498db;
                color: #ffffff;
                border-radius: 6px;
            }

            .teacher-navbar .nav-link i {
                margin-right: 8px;
            }

    .content {
        padding: 2rem; /* Consistent content padding */
    }
</style>