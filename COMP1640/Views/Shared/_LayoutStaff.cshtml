@{
    Layout = "_Layout";
}

<!-- Staff Navbar -->
<nav class="staff-navbar">
    <div class="container">
        <ul class="nav justify-content-start">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Staff" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                   asp-controller="Staff" asp-action="Index">
                    <i class="fas fa-home"></i> Home
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Staff" && ViewContext.RouteData.Values["Action"]?.ToString() == "Student" ? "active" : "")"
                   asp-controller="Staff" asp-action="Student">
                    <i class="fas fa-user-graduate"></i> Student Management
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Staff" && ViewContext.RouteData.Values["Action"]?.ToString() == "Teacher" ? "active" : "")"
                   asp-controller="Staff" asp-action="Teacher">
                    <i class="fas fa-chalkboard-teacher"></i> Teacher Management
                </a>
            </li>
        </ul>
    </div>
</nav>

<!-- Main Content -->
<div class="content">
    @RenderBody()
</div>

<style>
    .staff-navbar {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e0e0e0;
        padding: 0.5rem 0;
    }

        .staff-navbar .nav-link {
            color: #34495e;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

            .staff-navbar .nav-link:hover {
                background-color: #e9ecef;
                color: #3498db;
            }

            .staff-navbar .nav-link.active {
                background-color: #3498db;
                color: #ffffff;
                border-radius: 6px;
            }

            .staff-navbar .nav-link i {
                margin-right: 8px;
            }

    .content {
         padding-top: 2rem;
        padding-bottom: 2rem;
    }
</style>